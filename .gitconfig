[alias]
	# Non-verbose status
	st = status -sb
	# Unstage staged files
	unstage = reset HEAD
	# Uncommit last commit
	uncommit = reset --soft HEAD^
	# Undo a `git push`
	undopush = push -f origin HEAD^:master
	# Pull with rebase
	pullr = pull --rebase
	# Pull with rebase and then push
	pp = !git pull --rebase && git push
	# Usage: rebase topic branch with main branch, checkout main branch
	#        and then use this to merge topic on main, that way you avoid
	#        creating merge commits
	mergef = merge --ff-only
	# Review code before commit
	ap = add --patch
	# Add all (including non-staged) files
	aa = add -A
	# Simple decorated log with 20 latest commits
	lg = log --oneline --decorate -n 20
	# Commit all changes and add message inside editor
	cam = !git add -A && git commit -av
	# Commit with simple message inside editor
	cm = commit
	# Amend last commit inside editor
	amend = commit --amend

[core]
	editor = subl -w
	# Set CRLF endings in Windows checkouts but LF endings on Mac and Linux systems and in the repository
	autocrlf = input
	# Use custom `.gitignore`
	excludesfile = ~/.gitignore_global
	# Treat spaces before tabs, lines that are indented with 8 or more spaces, and all kinds of trailing whitespace as an error
	# and carriage returns at the end of lines as OK
	whitespace = trailing-space,space-before-tab,indent-with-non-tab,cr-at-eol

[apply]
	# Detect whitespace errors when applying a patch
	whitespace = fix

[merge]
	tool = meld
	# Include summaries of merged commits in newly created merge commit messages
	log = true

[push]
	# Push changes only on current branch
	default = tracking

[color]
	ui = true
[color "branch"]
	current = blue
	local = yellow
	remote = magenta
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red reverse
	new = green reverse
	whitespace = white reverse
[color "status"]
	added = yellow
	changed = red
	untracked = cyan
	branch = magenta

# Use `origin` as the default remote on the `master` branch in all cases
[branch "master"]
	remote = origin
	merge = refs/heads/master
[include]
	path = /Users/niksy/.gitconfig_extra
[remote "origin"]
	push = HEAD
